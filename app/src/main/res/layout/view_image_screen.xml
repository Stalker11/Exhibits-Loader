<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            tools:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/exhibit_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exhibit_title"
            app:layout_constraintEnd_toEndOf="@+id/exhibit_photo"
            app:layout_constraintStart_toStartOf="@+id/exhibit_photo"
            app:layout_constraintBottom_toBottomOf="@+id/exhibit_photo"
            app:layout_constraintTop_toTopOf="@+id/exhibit_photo"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintVertical_bias="0.078"/>
</android.support.constraint.ConstraintLayout>